<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Nội Thất Gỗ</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link href="~/MyCss/styles.css" rel="stylesheet" />
</head>
<body>
    <header class="bg-light py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                <span>Hotline Mua Hàng: <b>070770770</b></span> |
                <span>Email CSKH: <b>sangoviet@gmail.com</b></span>
            </div>
        </div>
    </header>
    <div class="header__main d-none d-lg-block d-xl-block">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-3 col-lg-5">
                    <h1 style="margin: 0;">
                        <a href="@Url.Action("Index", "Home")" class="header__logo__link">
                            <img src="~/Content/sangoviet.png" alt="Sàn Gỗ Việt Logo" />
                        </a>
                    </h1>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="header-search">
                        <form role="search" method="get" class="search-form" action="@Url.Action("Search", "Home")">
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="search" class="form-control" placeholder="Nhập từ khóa tìm kiếm sản phẩm..." name="s" />
                                    <button class="btn icon-search" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                                </div>
                            </div>
                    </div>
                    </form>
                    <div class="cat_header">
                        <ul>
                            <li>Phổ biến:</li>
                            <li><a href="#">Sàn gỗ châu Âu</a></li>
                            <li><a href="#">Sàn gỗ tự nhiên</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-3" style="justify-content: end; display: flex;">
                <div class="header-hotline">
                    <i class="fa fa-volume-control-phone" aria-hidden="true"></i>
                    <div class="hotline">
                        <p>Đặt hàng nhanh</p>
                        <a href="tel:0937927685" style="color: #ffffff;">0937927685</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">Trang chủ</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link active" href="@Url.Action("About", "Home")">Về Sàn Gỗ Việt</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownProducts" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Danh Mục
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownProducts">
                            <li><a class="dropdown-item" href="@Url.Action("ProductType", "Home", new { maLoaiSanGo = 1 })">Sàn gỗ Gõ Đỏ Nam Phi</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("ProductType", "Home", new { maLoaiSanGo = 2 })">Sàn gỗ Óc Chó</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("ProductType", "Home", new { maLoaiSanGo = 3 })">Sàn gỗ Sồi Mỹ</a></li>
                        </ul>
                    </li>
                    <li class="nav-item"><a class="nav-link text-white position-relative" href="@Url.Action("Cart", "Home")"><i class="fa fa-shopping-cart"></i></a></li>
                </ul>

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Chào, @User.Identity.Name! <span class="fa fa-caret-down"></span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li class="dropdown">
                                <a class="dropdown-item dropdown-toggle" href="#" id="navbarDropdownManager" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Quản lý <span class="fa fa-caret-right"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownManager">
                                    <li><a class="dropdown-item" href="#">Loại sàn gỗ</a></li>
                                    <li><a class="dropdown-item" href="#">Sàn gỗ</a></li>
                                    <li><a class="dropdown-item" href="#">Đơn hàng</a></li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a class="dropdown-item" href="#">Chức vụ</a></li>
                                        <li><a class="dropdown-item" href="#">Nhân viên</a></li>
                                    }
                                </ul>
                            </li>
                            <li><a class="dropdown-item" href="#">Thông tin nhân viên</a></li>
                            <li><a class="dropdown-item" href="#">Đăng xuất</a></li>
                        </ul>
                    </div>
                }
            </div>
        </div>
    </nav>

    <div id="content" class="container mt-4 mb-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer bg-dark text-white py-4">
        <div class="container text-center text-md-left">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5 class="mb-3">SANGOVIET.VN</h5>
                    <p>&copy; 2024. All rights reserved.</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="mb-3">Kết nối với chúng tôi</h5>
                    <div class="d-flex justify-content-center">
                        <a href="#" class="text-white me-3"><i class="fab fa-facebook fa-2x"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-twitter fa-2x"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-instagram fa-2x"></i></a>
                        <a href="#" class="text-white"><i class="fab fa-youtube fa-2x"></i></a>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="mb-3">Thông tin liên hệ</h5>
                    <p><i class="fa fa-phone me-2"></i>Điện thoại: <b>070770770</b></p>
                    <p><i class="fa fa-envelope me-2"></i>Email: <b>sangoviet@gmail.com</b></p>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/JavaScript/confirmAction.js"></script>
</body>
</html>
